package com.sriya.springboot.first_rest_api.user;

import java.util.Arrays;

import org.hibernate.mapping.List;
import org.slf4j.LoggerFactory;
import org.springframework.boot.CommandLineRunner;
import org.springframework.stereotype.Component;

import ch.qos.logback.classic.Logger;

@Component
public class UserDetailsCommandLineRunner implements CommandLineRunner {
	private Logger logger=(Logger) LoggerFactory.getLogger(getClass());
	private UserDetailsRepository repo;
	

	public UserDetailsCommandLineRunner(UserDetailsRepository repo) {
		super();
		this.repo = repo;
	}
	@Override
	public void run(String... args) throws Exception{
		repo.save(new UserDetails("Ranga","Admin"));
		repo.save(new UserDetails("Ravi","Admin"));
		repo.save(new UserDetails("John","Admin"));
		List<UserDetails> users=repo.findAll();
		
		}
}
